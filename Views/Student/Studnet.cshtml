@model Student
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>

        .h2 {
            font-family: "Trebuchet MS", "Lucida Sans Unicode", "Lucida Grande", "Lucida Sans", Arial, sans-serif;
            text-shadow: 1.5px 1.5px 2px #fff;
        }

        .table {
            font-size: 2ex;
            transition: all 1s;
        }

        #small-card {
            background-color: #f3c623;
            transition: all 1s;
        }

            #small-card:hover {
                transform: scale(0.9);
                background-color: #374045;
            }
    </style>
    <title>Studnet</title>
</head>
<body>
    <div class="container mt-5 col-12 offset-sm-1 col-sm-10 offset-md-3 col-md-6">
        <div class="card shadow">
            <img src="../../Imgs/man.png" width="150" height="150"
                 class="align-self-center shadow card-top-img rounded-circle" style="margin-top: -2.5em;">
            <div class="card-body text-center">
                <span class="h2">@Model.Name</span>
                <p class="mt-3">Student</p>
                <div id="small-card" class="offset-1 rounded col-10 shadow p-2">
                    <table class="table table-borderless text-white">
                        <tbody>
                            <tr>
                                <td>ID</td>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <td>Name</td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td>Age</td>
                                <td>@Model.Age</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <a href="~/Student/StudentList" class="col-10 col-sm-10 btn text-white mt-4"
                   style="background-color: #222831">
                    Close
                </a>
            </div>
        </div>
    </div>
</body>
</html>
