@model Department

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        .form-control {
            margin: 1em auto;
            border-radius: 2em;
            padding: 3ex;
        }

        .btn-user {
            border-radius: 2em;
            padding: 1ex;
        }

        #showInfoSection {
            background-color: #f3c623;
            transition: all 2s;
        }

            #showInfoSection:hover {
                background-color: #ff3014;
                transform: scale(1.1) rotate(15deg);
                border-radius: 4em;
            }

        .card {
            overflow: hidden;
        }
    </style>
    <title>Update</title>
</head>
<body>
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">

                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div id="showInfoSection"
                                 class="col-lg-6 d-none d-lg-block align-content-center text-center p-3">
                                <img src="../../Imgs/iconfinder_aeaaqqdqas_3305208.png" class="img-fluid
                                rounded-circle shadow-lg mb-4" alt="" width="100" height="100">
                                <div>
                                    <table class="table" style="color:#f7f7f7">
                                        <tbody>
                                            <tr>
                                                <td>ID</td>
                                                <td>@Model.Id</td>
                                            </tr>
                                            <tr>
                                                <td>Name</td>
                                                <td>@Model.Name</td>
                                            </tr>
                                            <tr>
                                                <td>Num Of Ins</td>
                                                <td>@Model.NumOfIns</td>
                                            </tr>
                                            <tr>
                                                <td>Num of Students</td>
                                                <td>@Model.NumOfStds</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-lg-6">

                                <a type="button" class="close mr-3 mt-2" href="~/Department/DeptList">
                                    &times;
                                </a>
                                <div class="p-5">

                                    <div class="text-center">
                                        <h1 class="h3 mb-4" style="color: rgba(0, 0, 0, 0.60)">Add Form</h1>
                                    </div>
                                    @using (Html.BeginForm("Update", "Department", FormMethod.Post))
                                    {
                                        <input type="text" value="@Model.Id" class="d-none" />
                                        @Html.Partial("DeptEditForm")

                                        <input type="submit" class="btn btn-info btn-user btn-block"
                                               value="Update Dept" />
                                    }

                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
</body>
</html>
